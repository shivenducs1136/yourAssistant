<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment.MainFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#282A3A"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/topbar"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:background="#0606F3"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/botimg"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="20dp"
                    app:civ_border_color="@color/white"
                    android:id="@+id/botimg"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toTopOf="@id/botimg"
                    app:layout_constraintLeft_toRightOf="@id/botimg"
                    android:layout_marginLeft="10dp"
                    android:text="YourAssistant"
                    android:maxLines="1"
                    android:autoSizeTextType="uniform"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:id="@+id/appnamee"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toBottomOf="@id/appnamee"
                    app:layout_constraintLeft_toLeftOf="@id/appnamee"
                    android:maxLines="1"
                    android:autoSizeTextType="uniform"
                    android:text="Online"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:id="@+id/statuss"
                    />
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/deleteimg"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="10dp"
                    android:padding="10dp"
                    android:id="@+id/deletebtn"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/topbar"
                app:layout_constraintBottom_toTopOf="@id/main_edit_txt"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/main_recview"
                android:padding="10dp"
                app:stackFromEnd="false"
                tools:listitem="@layout/message_sent"
                app:reverseLayout="true"
                />
            <EditText
                android:id="@+id/main_edit_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/sendbtn"
                android:background="#2C000000"
                android:padding="10dp"
                android:maxHeight="100dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"
                android:hint="Type here..."
                android:textColorHint="@color/white"
                />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="6dp"
                android:src="@drawable/ic_baseline_send_24"
                android:id="@+id/sendbtn"
                app:layout_constraintTop_toTopOf="@+id/main_edit_txt"
                app:layout_constraintBottom_toBottomOf="@+id/main_edit_txt"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="20dp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
</layout>